                            android:layout_height="match_parent"
                            />
                        <ImageView
                            android:id="@+id/bookmark_lib20_cody5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF">
                        <ImageView
                            android:id="@+id/book_lib20_cody6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                        <ImageView
                            android:id="@+id/bookmark_lib20_cody6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#E3F2FF">
                        <ImageView
                            android:id="@+id/book_lib20_cody7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                        <ImageView
                            android:id="@+id/bookmark_lib20_cody7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffff">
                        <ImageView
                            android:id="@+id/book_lib20_cody8"
