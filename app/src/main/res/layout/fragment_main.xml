<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pagefragment.fragment_main">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                ></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:layout_gravity = "center"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "   ()   평택시"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textColor="@color/Dodger_Blue"
                    android:id="@+id/main_region_text"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "12º"
                    android:letterSpacing="-0.1"
                    android:gravity="left"
                    android:textSize="100dp"
                    android:layout_gravity="center"
                    android:textColor="@color/Dodger_Blue"
                    android:id="@+id/main_temp_now">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "체감온도"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/Dodger_Blue">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "12º"
                    android:textSize="40dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textColor="@color/Dodger_Blue"
                    android:id="@+id/main_bodily_temp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "0º ~ 16º"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textColor="@color/Dodger_Blue"
                    android:id="@+id/main_temp_diff">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:weightSum="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:gravity="right">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:weightSum="1">
                    <androidx.viewpager2.widget.ViewPager2
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/viewpager"
                        android:clipToPadding="false"
                        android:clipChildren="false"/>
                </LinearLayout>
                <!--
                   -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:weightSum="3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/Maya_Blue">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:textSize="13dp"
                        android:textColor="@color/Dodger_Blue"
                        android:text = "오늘 날씨에는 자켓, 셔츠, 가디건,\n 야상, 청바지, 면바지 코디가 좋아요!"
                        android:layout_marginRight="30dp"
                        android:id="@+id/main_weather_ment"
                        ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textColor="@color/Dodger_Blue"
                        android:textSize="13dp"
                        android:text = "어제에 비해 쌀쌀한 편이니 \n 어제보다는 따뜻하게 입는게 좋습니다."
                        android:layout_marginLeft="30dp"
                        android:id="@+id/main_temp_ment">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/Maya_Blue">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:textSize="13dp"
                        android:textColor="@color/Dodger_Blue"
                        android:text = "일교차가 큰 편이니 얇은 겉옷을 챙기는 게 좋겠네요."
                        android:layout_marginRight="30dp"
                        android:id="@+id/main_temp_diff_ment"
                        ></TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">
                    <LinearLayout
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/layout_background"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="매치 컬러"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="bottom"
                                android:textColor="@color/colorWhite">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@id/color1"
                                    app:layout_constraintHorizontal_chainStyle="spread"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/color2"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="24dp"
                                        android:id="@+id/color1_up">
                                    </ImageView>
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="24dp"
                                        android:id="@+id/color1_down">
                                    </ImageView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/color2"
                                    app:layout_constraintEnd_toStartOf="@id/color3"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/color1"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="24dp"
                                        android:id="@+id/color2_up">
                                    </ImageView>
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="24dp"
                                        android:id="@+id/color2_down">
                                    </ImageView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/color3"
                                    app:layout_constraintEnd_toStartOf="@id/color4"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/color2"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="24dp"
                                        android:id="@+id/color3_up">
                                    </ImageView>
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="24dp"
                                        android:id="@+id/color3_down">
                                    </ImageView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/color4"
                                    app:layout_constraintEnd_toStartOf="@id/color5"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/color3"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:orientation="vertical"
                                    >
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="24dp"
                                        android:id="@+id/color4_up">
                                    </ImageView>
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="24dp"
                                        android:id="@+id/color4_down">
                                    </ImageView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/color5"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/color4"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="24dp"
                                        android:id="@+id/color5_up">
                                    </ImageView>
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="24dp"
                                        android:id="@+id/color5_down">
                                    </ImageView>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>